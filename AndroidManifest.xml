<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gamespackage.charu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="SelectActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.gamespackage.charu.SELECTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="GameMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.gamespackage.charu.GAMEMENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="StartGame"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.gamespackage.charu.STARTGAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ChangePictureOnShake"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.gamespackage.charu.CHANGEPICTUREONSHAKE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="PlayGame"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="OptionsMenu"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>